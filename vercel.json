{
    "version": 2,
    "builds": [
        {
            "src": "index.js",
            "use": "@vercel/node"
        }
    ],
    "routes":[
        {
            "src": "/api/(.*)",
            "dest": "index.js"
        },
        {
            "src": "/",
            "dest": "views/index.pug"
        },
        {
            "src": "/(.+)",
            "dest": "public/$1"
        }
    ]
}


